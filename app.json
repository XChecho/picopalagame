{
  "expo": {
    "name": "Pico & Pala",
    "slug": "picopalaapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icons/icon.png",
    "scheme": "picopalaapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.auronTaleGames.picopalaapp"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.auronTaleGames.picopalaapp"
    },
    "web": {
      "output": "static",
      "favicon": "./src/assets/images/icons/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/icons/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-localization",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
